{
  "name": "clear-wallet",
  "version": "1.5.2",
  "private": true,
  "description": "Clear Wallet (CLW) is a wallet that helps you manage your Ethereum assets and interact with Ethereum dApps and contracts with the main focus on absolute privacy.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "inject": "esbuild src/extension/inject.ts --bundle --minify --target=es2020 --format=iife --outfile=src/extension/inject.js",
    "content": "esbuild src/extension/content.ts --bundle --minify --target=es2020 --format=iife --outfile=src/extension/content.js",
    "post-build": "node ./release-scripts/post-build.ts",
    "build": "npm run inject && npm run content && vue-tsc --noEmit && vite build && npm run post-build",
    "rebuild": "npm run build && node ./release-scripts/create-release.ts rebuild",
    "preview": "vite preview",
    "release": "node ./release-scripts/version-release.ts",
    "postversion": "git push",
    "pub": "npm run build && npm run release && node ./release-scripts/create-release.ts",
    "only-pub": "npm run build && node ./release-scripts/create-release.ts",
    "test": "echo 'No bun tests. Use npm test framework.'"
  },
  "dependencies": {
    "@ionic/vue": "8.4.2",
    "@ionic/vue-router": "8.7.1",
    "@zxing/browser": "^0.1.5",
    "core-js": "^3.44.0",
    "ethers": "^6.15.0",
    "p-queue": "^8.1.0",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "2.0.3",
    "@types/bun": "^1.2.19",
    "@types/archiver": "^6.0.3",
    "@types/chrome": "^0.1.1",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-typescript": "^14.6.0",
    "archiver": "^7.0.1",
    "eslint": "^9.32.0",
    "eslint-plugin-vue": "^10.4.0",
    "http-browserify": "^1.7.0",
    "https-browserify": "^1.0.0",
    "jest": "^30.0.5",
    "sass": "^1.89.2",
    "stream-browserify": "^3.0.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.9.2",
    "util": "^0.12.5",
    "vite": "^7.0.6",
    "vue-tsc": "^3.0.5"
  },
  "disabledNativeDependencies": {
    "@capacitor/app": "^5.0.6",
    "@capacitor/core": "^5.2.3",
    "@capacitor/haptics": "^5.0.6",
    "@capacitor/keyboard": "^5.0.6",
    "@capacitor/status-bar": "^5.0.6"
  }
}
